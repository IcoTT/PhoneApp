<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#E6FFFFFF"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/overlay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time's Up!"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Subheading: first line with subtle emphasis -->
    <TextView
        android:id="@+id/overlay_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Subheading here"
        android:textColor="#444444"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="start" />

    <!-- Rest of the message -->
    <TextView
        android:id="@+id/overlay_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Message here"
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="start" />

    <Button
        android:id="@+id/btn_got_it"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Got it" />

</LinearLayout>
